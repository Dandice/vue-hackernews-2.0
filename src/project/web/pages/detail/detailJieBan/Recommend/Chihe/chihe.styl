.chihe_block {
    position relative;
    margin-top: 10px;
    clear: both;
    .banner {
        display flex;
        margin: auto;
        line-height 40px;
        padding: 0 23px;
        border: 1px solid #ececec;
        .black {
            float: left;
            margin-right: 32px;
            font-size: 16px;
            color: #323232;
            cursor: pointer;
        }
        .black:last-child {
            margin-right 0;
        }
        .black:hover {
            color: #10b041;
        }
    }
    .classify {
        .col {
            width: 240px;
            .title {
                font-size: 14px;
                font-weight: 700;
            }
            span {
                display inline-block;
                width: 100px;
            }
        }
    }
    .flex {
        display: flex;
        flex-wrap: wrap;
        width: 200px;
        margin: auto;
        box-sizing border-box;
        padding: 23px 200px 28px 0;
    }
    .content {
        z-index 2;
        width: 100%;
        background #fff;
        border-left: 1px solid #ececec;
        border-right: 1px solid #ececec;
        border-bottom: 1px solid #ececec;
        box-sizing border-box;
        .sharp {
            position absolute;
            background-image: url(//common1.qyerstatic.com/bbs/old/images/detail/nav1.png);
            background-repeat: no-repeat;
            width: 14px;
            height: 9px;
            top: 33px;
            background-position: 0 -44px;
        }
        .con_item {
            padding: 10px 24px;
            .left {
                img {
                    width: 80px;
                    height 80px;
                    vertical-align: top;
                }
            }
            .right {
                display: flex;
                flex-direction: column;
                justify-content: space-between;
                height: 80px;
                margin-left: 10px;
                flex: 1;
                .title {
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    color: #323232;
                    font-size: 14px;
                    word-wrap: break-word;
                    word-break: break-all;
                }
                .price {
                    color: #959595;
                    font-size: 14px;
                    .price_num {
                        font-size: 18px;
                        color: #ff7466;
                        font-weight: 500;
                        em {
                            font-style: normal;
                        }
                    }
                }
            }
        }
    }

}