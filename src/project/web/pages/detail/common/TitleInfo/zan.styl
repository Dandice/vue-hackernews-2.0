
.common_block_zan {
    cursor: pointer;
    position: absolute;
    right: 0px;
    top: 0;


    .block {
        width: 90px;
        text-align center;
        color: #636363;
        border-right: 1px solid #e9e9e9;
        line-height: 20px;
        height 100%;
        display: flex;
        flex-direction: column;
        float: left;
        justify-content: center;
    }
    .icomoon {
        font-size 24px;
    }
    .zan {
        .ico-16:before {
            content "\ea10";
            color: #f5b100;
        }
        .ico-17:before {
            content "\ea11";
            color: #f5b100;
        }
    }
    .zan:hover {
        background #f5b100;
    }
    .collect {
        .ico-10:before {
            content "\ea0b";
            color: #ff7466;
        }
        .ico-11:before {
            content "\ea0c";
            color: #ff7466;
        }
    }
    .collect:hover {
        background #ff7466;
    }
    .reply {
        .ico-18:before {
            content "\ea12";
            color: #10b041;
        }
        .ico-19:before {
            content "\ea13";
            color: #10b041;
        }
        .reply_wrap {
            width: 368px;
            min-height: 200px;
            position: absolute;
            top: 70px;
            left: -150px;
            background #ffff;
            z-index 1;
            border: 1px solid #3f9f5f;
            padding 10px;
            box-sizing border-box;
            .sip_rep_frame {
                border: 1px solid silver;
            }
            .content {
                min-height 100px;
                max-height 500px;
            }
        }
    }

    .reply:hover {
        background: #10b041;
    }

    .share {
        .ico-43:before {
            content "\ea2b"
        }
    }

    .share:hover {
        background: silver;
    }

    .block:hover {
        .zanico:before {
            color: #fff;
        }
        .text {
            color: #fff;
        }
    }
    .top_reply {
        background #fff;
        position absolute;
    }
}

.q_share_icon {
    margin 0 5px;
}

