
#pc_title_info {
    position relative;
    .common_block_zan {
        height 75px;
    }
    .blur_img {
        position: absolute;
        left: -30px;
        top: -30px;
        width: calc(100% + 60px);
        height: 460px;
        filter: blur(10px);
        z-index -1;
    }
    .top_info {
        width: 1160px;
        margin: auto;
        overflow: hidden;
        position: relative;
        .bg_img {
            position: absolute;
            left: -60px;
            height 400px;
        }
        .strategy {
            position: absolute;
            top: 15px;
            left: 15px;
            z-index: 1;
            a {
                color: inherit;
            }
            .strategy_item {
                color: inherit;
                text-decoration: underline;
            }
            .strategy_block {
                color: inherit;
                margin: 0 5px;
            }
        }
    }
    .subject {
        position: absolute;
        left: 0;
        bottom: 75px;
        width: 100%;
        height: 174px;
        background: url(//common1.qyerstatic.com/bbs/old/images/detail/shade.png) repeat-x;
        background: -webkit-gradient(linear, 0 0, 0 bottom, from(hsla(0, 0%, 100%, 0)), to(rgba(0, 0, 0, .6)));

    }
    .subject_con {
        font-size 24px;
        position: absolute;
        left: 166px;
        bottom: 20px;
        width: 770px;
        color: #fff;
        font-weight: 700;
        z-index 1;
    }
    .no_cover_sub {
        left: 0;
        bottom: 20px;
        color: #323232;
    }
    .bottom_info {
        background #F0F0F0;
        height 75px;
        .bottom_con {
            width: 1160px;
            margin: 0 auto;
            height 75px;
            font-size 14px;
            position: relative;
            .left {
                .head_pho {
                    width: 120px;
                    height: 120px;
                    position: absolute;
                    top: -69px;
                    left: 20px;
                    .avatar {
                        width: 120px;
                        height 120px;
                        position absolute;
                        border-radius 50%;
                        top: 0;
                        left: 0;
                        border: 4px solid #f0f0f0;
                    }
                    .auth {
                        position: absolute;
                        right: -8px;
                        bottom: -9px;
                        img {
                            width: 32px;
                        }
                    }
                }
                .detail {
                    .top {
                        span {
                            cursor pointer;
                        }
                        .user_name {
                            font-size 15px;
                            margin-right 10px;
                            font-weight bold;
                            color: #636363;
                        }
                        .user_name:hover {
                            color: #10b041;
                        }
                        .level {
                            margin-right 10px;
                            border-left: 1px solid silver;
                            padding-left: 10px;
                            color: #636363;
                            cursor default;
                        }
                        .jh {
                            background: #FF735F;
                            font-size: 12px;
                            padding: 0 5px;
                            color: #fff;
                            border-radius: 2px;
                            height: 20px;
                            img {
                                width 12px;
                            }
                            img:last-child {
                                margin-right 3px;
                            }
                        }
                        .cha_cover {
                            color: #636363;
                            background: url(//common1.qyerstatic.com/bbs/old/images/detail/infos-icon.png) no-repeat 0 -128px;
                            padding-left: 20px;
                            margin-left: 20px;
                            font-size: 14px;
                        }
                        .cha_cover:hover {
                            background-position: 0 -150px;
                            color: #10b041;
                        }
                    }
                    .info_bottom {
                        color: #636363;
                    }
                    .icon {
                        color: #d7d7d7;
                        position relative;
                        width: 24px;
                    }
                    .time_icon:before {
                        content: '\EA0A';
                        font-size 24px;
                        top: -18px;
                        left: -5px;
                        position: absolute;
                    }
                    .total_views_icon {
                        margin-left: 10px;
                    }
                    .total_views_icon:before {
                        position absolute;
                        content: '\ea22';
                        font-size 24px;
                        top: -18px;
                    }
                    .total_views {
                        margin-right 20px;
                    }
                }
            }
            .right {
                div {
                    width: 76px;
                    text-align center;
                    color: #636363;
                    border-right: 1px solid #e9e9e9;
                    line-height: 20px;
                }
            }
        }
    }
}