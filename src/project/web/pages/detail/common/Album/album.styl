
#pc_detail {
    .el-dialog__body {
        .pc_album {
            margin-top -45px;
        }
    }
    .pc_album {
        .album_top {
            text-align left;
        }
        .el-menu {
            margin-bottom 10px;
            width: 550px;
        }
        select {
            width: 200px;
            height 40px;
            border: 1px solid #d9d9d9;
        }
        #uploadbtn {
            width: 124px;
            text-align: center;
            border: 1px solid #0073b6;
            border-radius: 3px;
            background: #0073b6;
            color: #fff;
            text-shadow: 0 -1px 0 #00395b;
            margin: 50px auto 0;
            line-height: 30px;
            cursor pointer;
        }
        .img_list {
            margin-top: 15px;
            span {
                display inline-block;
                height 30px;
                line-height: 30px;
                float: left;
            }
            .percent {
                display: inline-block;
                width: 60%;
                border: 1px solid #f5f5f5;
                margin-right 20px;
                span {
                    background #3f9f5f;
                }
            }
            .del {
                color: #3f9f5f;
                float: right;
                cursor pointer;
                padding: 0 10px;
            }
        }
    }

    .pc_album {
        text-overflow: ellipsis;
        margin-top: -25px;
        input {
            font-size: 12px;
        }
        .text {
            margin-right 10px;
        }
        .pic_list {
            height 260px;
            padding-bottom 10px;
            overflow-y scroll;
            display inline-flex;
            flex-wrap wrap;
            align-items top;
            .img_item {
                cursor pointer;
                position relative;
                margin: 15px 15px 0 0;
                img {
                    width: 100px;
                }
                .selected {
                    position: absolute;
                    left: 34px;
                    top: 34px;
                    width: 32px;
                    height: 32px;
                    background: url(//static.qyer.com/models/project/bbs/css/images/editor_icon.png) no-repeat -1000px;
                    background-position: 0 -416px;
                }
            }

        }
        .grey {
            background-color: #eaeaea;
            border: 1px solid #eaeaea;
            cursor: default;
            color: silver;
        }
    }

    .bottom {
        display flex;
        justify-content: flex-end;
        align-items center;
        padding-top 20px;
        cursor pointer;
        .btn {
            line-height: 26px;
            padding: 0 14px;
            border-radius 2px;
        }
        .cancel {
            background-color: #f5f5f5;
            color: #323232;
        }
        .insPic {
            background-color: #3f9f5f;
            border: 1px solid #3f9f5f;
            color: #fff;
            margin-left: 15px;
        }
        .grey {
            background-color: #eaeaea;
            border: 1px solid #eaeaea;
            cursor: default;
            color: silver;
        }
    }
}
