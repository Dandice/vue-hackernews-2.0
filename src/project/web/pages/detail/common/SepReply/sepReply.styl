            width: 100%;
            height: 100px;
            border: 1px solid #d7d7d7;
            border-radius: 4px
            padding: 5px;
            color: #c0c0c0;
            box-sizing: border-box;
            .reply {
                color: #10b041;
                cursor pointer;
                margin: 0 5px;
            }
            .reply:hover {
                text-decoration: underline
            }
        }
