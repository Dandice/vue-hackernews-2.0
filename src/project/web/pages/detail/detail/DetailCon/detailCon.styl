
#detail_con {
    width: 100%;
    box-sizing: border-box;
    color: rgba(0, 0, 0, .8);
    font-size 16px;
    padding-top 15px;
    .load_error {
        color: rgba(0, 0, 0, .6);
        font-size 18px;
        text-align: center;
        margin: 50px 0;
        cursor pointer;
        img {
            width: 16px;
            margin-left: 10px;
        }
    }
    .sip_rep_wrap .content {
        min-height: 120px;
    }
    .detail_wrap {
        overflow hidden;
    }
    strong {
        font-weight 700;
    }
    img {
        max-width: 750px;
    }
    img[data-original] {
        margin: 5px 0;
        display: block;
        background #f0f0f0;
        opacity 0.6;
        cursor pointer;
    }
    span[data-type=media], span[data-type=video] {
        iframe {
            max-height 450px;
        }
    }
    .gradient_img {
        opacity: 1 !important;
        transition: all .4s;
    }
    .fillimg {
        width: 89px;
        display: block;
        margin: 10px 0 15px;
        height auto;
    }
    .isPreview {
        visibility visible;
    }
    iframe {
        width 100%;
        /*max-height 450px;*/
        border: none;
    }
}

#_bbs_img_toolbar {
    position absolute;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, .75);
    line-height: 30px;
    white-space: nowrap;
    overflow: hidden;
    color: #fff;
    cursor pointer;
    padding: 0 5px;
    font-size 13px;
    display none;
    span {
        margin 0 5px;
    }
    .relation:hover, .cover:hover {
        color: #10b041;
        border-bottom 1px solid #10b041;
    }
    .zan:after {
        content '\ea10';
        color: #fff;
        font-size 26px;
        vertical-align: -8px;

    }
    .zan:hover:after {
        color: #f5b100;
    }
    /*.zaned:after {
        content '\ea11';
    }*/
    .enlarge {
        padding-left: 9px;
        background-image: url(//common2.qyerstatic.com/bbs/old/images/detail/icon-imgTool.png);
        background-position: -29px 7px;
        background-repeat: no-repeat;
        width: 12px;
        color: transparent;
    }
    .enlarge:hover {
        background-position: -29px -16px;
    }
    .item {
        display: inline-block;
    }
}

.discount {
    position: fixed;
    background: #fff;
    border-radius: 2px;
    padding 10px 0 10px 10px;
    border: 1px solid #e0e0e0;
    box-sizing border-box;
    z-index 2;
    cursor pointer;
    .dis_hotel {
        .top_right {
            margin-left: 10px;
            width: calc(100% - 168px);
        }
        .ht_name {
            font-size: 16px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .score {
            margin-top: 20px;
            text-align right;
            .grade {
                font-size: 16px;
                color: #f26622;
                padding: 0 10px 0 5px;
            }
        }
        .price {
            font-size: 22px;
            font-style: normal;
            font-weight: bold;
            color: #f26622;
            padding: 0 0 0 10px;
        }
        .btn {
            background-color: #f26622;
            color: #fff;
            margin-right: 10px;
            font-size: 14px;
            border-radius: 4px;
            line-height: 35px;
            width: 155px;
            height: 35px;
            text-align: center;
        }
    }
    .sharp {
        position: absolute;
        width: 0;
        height: 0;
    }
    &_sharp1 {
        top: -13px;
        left: 5px;
        border: 6px solid transparent;
        border-bottom-color: #e0e0e0;
    }
    &_sharp2 {
        top: -12px;
        left: 5px;
        border: 6px solid transparent;
        border-bottom-color: #fff;
    }
    &_con {
        width: 100%;
        .bottom {
            border-radius: 2px;
            height: 29px;
            line-height: 29px;
            float: right;
            color: #ff7466;
            border: 1px solid #ff7466;
            width: 80px;
            text-align: center;
            .cur {
                font-size 12px;
                color: #8a8a8a;
            }
        }
        .title {
            word-wrap: break-word;
            word-break: break-all;
            display: -webkit-box!important;
            text-overflow: ellipsis;
            -webkit-line-clamp: 2;
            overflow hidden;
            -webkit-box-orient: vertical;
        }
        &_1 {
            position relative;
            .title {
                font-size 16px;
                height: 44px;
                line-height: 22px;
                font-weight bold;
                width: calc(100% - 110px);
                position: absolute;
                right: 0;
                top: 0;
            }
            .bottom {
                position absolute;
                bottom: 0;
                right 0;
            }
            .pic {
                position relative;
                max-width: 90px;
                flex: 1;
                margin-right: 20px;
                img {
                    width: 100%;
                    height 90px;
                }
                .flag {
                    position: absolute;
                    left: -6px;
                    top: 8px;
                    width: 57px;
                    height: 23px;
                    color: #fff;
                    font-style: normal;
                    font-size: 12px;
                    font-weight: 700;
                    text-align: center;
                    background: transparent url(//common1.qyerstatic.com/bbs/old/images/detail/salefirst.png) no-repeat;
                }
            }
            .discount_con_right {
                max-width calc(100% - 110px);
            }
        }
        &_2 {
            position relative;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            width: 49%;
            border-left: 1px solid #f5f5f5;
            height: 123px;
            box-sizing: border-box;
            .flex_bet {
                padding: 0 10px;
                height: 60px;
            }
            .title {
                font-size 14px;
                color: #494950;
                height 36px;
                line-height 18px;
                width: calc(100% - 100px);
            }
        }
    }
}

.el-dialog {
    .flex {
        display flex;
    }
}
