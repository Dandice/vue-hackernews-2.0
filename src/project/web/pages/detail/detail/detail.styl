body {font:12px/1.5 "Hiragino Sans GB","Microsoft YaHei","Helvetica Neue",Helvetica,Arial,\5b8b\4f53,sans-serif}
body,textarea,input,select,button { -webkit-font-smoothing:antialiased;}


#app {
    .el-pager li.active {
        background #5ea67c;
    }
    button .el-icon:hover {
        color #5ea67c;
    }
    a {
        text-decoration none;
    }
    .rea_input {
        width: 75%;
        height 35px;
        outline none;
        font-size 14px;
        line-height 30px;
        padding-left 10px;
        margin-right: 10px;
        border-radius: 3px;
        border: 1px solid #dcdfe6;
    }
    .rea_input:focus {
        border 1px solid #3f9f5f;
    }
    .footer {
        margin-top: 20px;
        text-align right;
        font-size 12px;
        color: #c0c0c0;
        .two_btn {
            padding 3px 13px;
            border-radius: 3px;
            cursor pointer;
        }
        .cancel {
            background-color: #fff;
        }
        .confirm {
            margin-left: 20px;
            color: #fff;
            border: 1px solid #3f9f5f;
            background-color: #3f9f5f;
        }
    }
    .cancel {
        background-color: #fff;
        color: #323232;
        /*border: 1px solid silver;*/
    }
    .confirm {
        margin-left: 20px;
        color: #fff;
        border: 1px solid #3f9f5f;
        background-color: #3f9f5f;
    }

    .grey {
        background-color: #eaeaea;
        border: 1px solid #eaeaea;
        cursor: default;
        color: silver;
    }

    /*a {
        color: #0073b6;
    }*/
    .bbs_found_content {
        margin: 50px 0 0;
        dl {
            width: 173px;
            float: left;
            margin-left: 20px;
            padding: 45px 10px 0;
            height: 80px;
            background: #eee;
            border-radius: 8px;
            text-align: center;
            dt {
                height: 18px;
                font-size: 14px;
                line-height: 18px;
                font-weight: 700;
                position: relative;
            }
            dd {
                color: #959595;
                margin-top: 4px;
                font-size: 12px;
            }
        }
        .bg1 {
            margin-left: 0;
            span {
                background: url(//static.qyer.com/images/bbs/travel/help_bg1.png) no-repeat;
            }
        }
        .bg2 span {
            background: url(//static.qyer.com/images/bbs/travel/help_bg2.png) no-repeat;
        }
        .bg3 span {
            background: url(//static.qyer.com/images/bbs/travel/help_bg3.png) no-repeat;
        }
        span {
            width: 62px;
            height: 62px;
            display: block;
            position: absolute;
            left: 60px;
            top: -75px;
        }
    }
    .check_hodo {
        display: block;
        margin: 30px auto 10px;
        width: 137px;
        color: #fff;
        line-height: 42px;
        background: #09A5F0;
        text-align: center;
        border-radius: 4px;
        font-size: 18px;
        cursor pointer;
    }
}

#pc_detail {
    overflow-x hidden;
    .tag_pagination {
        width: 755px;
        margin-bottom 20px;
        .tag_item {
            float: left;
            padding: 0 9px;
            line-height: 18px;
            border-radius: 10px;
            color: #10b041;
            border: 1px solid #10b041;
            margin: 0 10px 10px 0;
        }
    }
    .common_reply_wrap {
        top: 70px;
        right 80px;
        position fixed;
        width: 368px;
        min-height: 200px;
        background #ffff;
        border: 1px solid #3f9f5f;
        padding 10px;
        box-sizing border-box;
        z-index 1001;
        border-radius: 2px;
        .content {
            max-height 600px;
            overflow scroll;
        }
    }
    .detail_con {
        width: 1160px;
        margin: 0 auto;
        padding: 40px 0 80px;
        display flex;
        justify-content space-between;
        .detail_con_left {
            width: 765px;
            //width: 500px;
        }
        .detail_con_right {
            width: 368px;
        }
    }
    .flex_start {
        display flex;
        align-items flex-start;
    }
    .flex_bet {
        display flex;
        justify-content space-between;
        align-items center;
    }
    .flex_cen {
        display flex;
        align-items center;
        justify-content: center;
    }
    .inl_flex {
        display inline-flex;
        justify-content center;
        align-items center;
        flex-wrap: wrap;
    }
    .only_flex {
        display inline-flex;
        align-items center;
    }
}

ul, li, dl, dt, dd {
    list-style none;
    padding: 0;
    margin: 0;
}

@font-face {
    font-family: 'icomoon';
    src: url('//static.qyer.com/models/basic/font/bbs/web/fonts/icomoon.eot?v=1470218853598'); /* IE9*/
    src: url('//static.qyer.com/models/basic/font/bbs/web/fonts/iconfont.woff?v=1470218853598') format('woff'), /* chrome, firefox */ url('../img/icomoon.ttf') format('truetype');
}

.icomoon {
    font-family: 'icomoon' !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.q-layer-userinfo, .q-layer-message {
    z-index: 1002 !important;
}

.el-popover {
    color: #636363;
    min-width 102px !important;
}

.manage_item_wrap {
    display: inline-flex;
    flex-wrap: wrap;
    .manage_item {
        margin: 0 10px 10px 0;
        padding: 6px 16px;
        border: 1px solid silver;
        border-radius: 3px;
        background-color: #f5f5f5;
        font-size: 14px;
        color: #636363;
        cursor: pointer;
    }
    .manage_item:hover {
        border-color: #10b041;
        color: #10b041;
    }
}

.manage_con {
    .man_input_item {
        display flex;
        align-items center;
        margin-bottom: 20px;
        position relative;
        .show_checkbox {
            position: absolute;
            z-index: 1;
            background: #fff;
            width: 200px;
            border: 1px solid #c0c4cc;
            height 155px;
            overflow scroll;
            top: 40px;
            div {
                line-height 38px;
                border-bottom: 1px solid #f5f5f7;
                label {
                    width: 165px;
                    display inline-block;
                }
            }
            .disabled {
                background rgb(238, 238, 238);
            }
            .selected {
                background #d9eed7;
            }
        }
    }
    .left_key {
        margin-right 15px;
        font-size: 16px;
        color: #323232;
        display inline-block;
        width: 65px;
    }
}

