.rel_read_top {
    margin-top: 34px;
    border: 1px solid #ececec;
    overflow: hidden;
    .top_info {
        padding: 26px 15px 16px;
        font-size: 20px;
        line-height: 20px;
        color: #323232;
    }
    .read_top_scroll {
        width: 320px;
        overflow hidden;
        max-height: 310px;
        margin: 0 24px;
        .read_top_con {
            display flex;
        }
        .read_top_item {
            display flex;
            width: 320px;
            .item_left {
                img {
                    width: 80px;
                    height 80px;
                }
            }
            .item_right {
                padding-left: 12px;
            }
        }
    }
}