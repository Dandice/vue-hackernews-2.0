.rel_read_top {
    margin-top: 34px;
    border: 1px solid #ececec;
    overflow: hidden;
    .top_info {
        padding: 26px 15px 16px;
        font-size: 20px;
        line-height: 20px;
        color: #323232;
        .cur_index {
            color: #848484;
            cursor pointer;
            .icon_prev:before {
                content: '\ea06';
            }
            .icon_next:before {
                content: '\ea08';
            }
            .ico {
                font-size 28px;
            }
            .ico:hover {
                color: #10b041;
            }
        }
    }
    .read_top_scroll {
        width: 320px;
        overflow hidden;
        max-height: 310px;
        margin: 0 24px;
        .read_top_con {
            display flex;
        }
        .read_top_item {
            display flex;
            width: 320px;
            padding: 10px 0;
            cursor: pointer;
            .item_left {
                img {
                    width: 80px;
                    height 80px;
                    display: inline-block;
                }
            }
            .item_right {
                padding-left: 12px;
                .subject {
                    display: -webkit-box;
                    -webkit-line-clamp: 2;
                    -webkit-box-orient: vertical;
                    overflow: hidden;
                    line-height 20px;
                    text-overflow: ellipsis;
                    color: #323232;
                    font-size: 14px;
                    word-wrap: break-word;
                    word-break: break-all;
                }
                .pv {
                    margin-top: 10px;
                    color: #9d9d9d;
                    .pv_icon:before {
                        content: '\EA22';
                        margin-right 2px;
                        font-size: 24px;
                        margin-left: -4px;
                        color: silver;
                        vertical-align: -6px;
                    }
                }
            }
        }
    }
}