
#detail_con {
    width: 100%;
    box-sizing: border-box;
    color: rgba(0, 0, 0, .8);
    font-size 16px;
    letter-spacing: .5px;
    .detail_wrap {
        overflow hidden;
    }
    .floor_item {
        padding: 20px 20px 15px;
        border-top: 1px solid #e6e8ea;
        .user_info {
            display flex;
            padding-bottom 20px;
            font-size 13px;
            align-items center;
            .left {
                width: 40px;
                height: 40px;
                border-radius: 20px;
            }
            .center {
                flex: 1;
                margin-left 9px;
                margin-top: -2px;
                .name {
                    color: rgba(0,0,0,.8)
                    text-decoration none;
                }
                .lz {
                    font-size: 12px !important;
                    background: #c0c0c0;
                    padding: 0 5px;
                    margin-left: 5px;
                    height: 20px;
                    line-height: 20px;
                    color: #fff !important;
                    border-radius: 8px;
                }
                .time {
                    color: rgba(0,0,0,.4);
                    line-height 14px;
                }
            }
            .right {
                color: rgba(0,0,0,.4);
            }
        }
        .quote {
            font-size 15px;
            margin-bottom: 20px;
            .left {
                .reply {
                    color: #959595;
                }
                .floor {
                    color #0CBF79;
                }
                .name {
                    margin-left: 12px;
                }
            }
            .right {
                img {
                    width: 12px;
                    margin-left 5px;
                }
            }
        }
        .open_quote {
            margin-bottom 12px;
            font-size 13px !important;
            max-height: 50px;
            display: inline-block;
            .quo_con {
                margin-right: 10px;
                color: #C0C0C0 !important;
            }
        }
        .floor_bot {
            display: flex;
            justify-content: flex-end;
            font-size 13px;
            padding-top 15px;
            .del {
                color: #C0C0C0;
                margin-right 15px;
            }
            .reply {
                color: #11bf79
            }
            img {
                width 12px;
                margin-right: 5px;
            }
        }
    }
    .floor_item:first-child {
        border-top none;
    }
    h1 {
        font-size 18px;
    }
    h2 {
        font-size 16px;
    }
    strong {
        font-weight 700;
    }
    .floor_item font, .floor_item span, .floor_item strong {
        font-size: 16px !important;
        /*color: rgba(0, 0, 0, .8) !important;*/
    }
    a {
        color: #11bf79;
        font-weight 400;
        text-decoration: underline;
    }
    img[data-original] {
        margin: 5px 0;
        display: block;
        background #f0f0f0;
        opacity 0.6;
    }
    img {
        max-width: 100%;
    }
    .gradient_img {
        opacity: 1!important;
        transition: all .4s;
    }
    .fillimg {
        width: 89px;
        height auto;
        display: block;
        margin: 10px 0 15px;
    }
    .isPreview {
        visibility visible;
    }
    iframe {
        width 100%;
        border: none;
    }
    .qyer_attach .size {
        margin-left 5px;
    }
}


