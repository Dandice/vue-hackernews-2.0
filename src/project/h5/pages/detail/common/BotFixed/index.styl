
#botFixed {
    position fixed;
    left: 0;
    bottom: -1px;
    height 50px;
    background #F6F5F5;
    width: 100%;
    font-size 13px;
    .block {
        background: #fff;
        border-radius: 4px;
        height 35px;
        margin-left: 10px;
        border: 1px solid #e8e8e8;
    }
    .zan, .unzan {
        color: #0CBF79;
        width: 86px;
        margin-left: 15px;
        img {
            width 13px;
            margin-right 3px;
        }
    }
    .gesture {
        animation: enlargeSize .5s ease-out .1s;
    }
    .unzan {
        border: 1px solid #0CBF79;
    }
    .page {
        width: 86px;
        color: #626262;
        position relative;
        select {
            position absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity 0;
        }
    }
    .reply {
        flex: 1;
        margin-right: 15px;
        padding-left: 10px;
        line-height: 35px;
        span {
            color: #000;
            opacity 0.2;
        }
    }
    .reply_con {
        position fixed;
        bottom: 0;
        width: 100%;
        background #f5f5f5;
        /*visibility hidden;*/
        z-index 20;
        .top {
            font-size 14px;
            line-height: 49px;
            .center {
                font-size 18px;
            }
            .right {
                color: #aaaaaa;
            }
            .hav_rep_con {
                color: #0cbf79;
            }
        }
        textarea {
            display: block;
            height: 75px;
            border: 1px solid #0cbf79;
            border-radius: 4px;
            line-height: 1.3;
            width: 100%;
            resize: none;
            padding: 10px;
            box-sizing: border-box;
            font-size: 13px;
        }
        .bottom {
            margin: 16px 0;
            height 26px;
            .upload {
                position: absolute;
                left: -10px;
                width: 30px;
                opacity 0;
            }
            img {
                margin-right 10px;
            }
            .img_icon {
                height 20px;
            }
            .vertify {
                border: solid 1px rgb(204, 204, 204);
                font-size: 14px;
                padding: 3px;
                border-radius: 4px;
                width: 120px;
                height: 26px;
                margin-right 10px;
            }
        }
        .img_list {
            padding 10px 0 20px;
            display flex;
            .img_item {
                width: 110px;
                height 110px;
                margin-right: 15px;
                background: #fff;
                position relative;
                margin-top 12px;
                .del {
                    position absolute;
                    top: -10px;
                    right -10px;
                    width: 20px;
                    height 20px;
                    background-size 100%;
                }
                img {
                    width: 100%;
                }
            }
        }
    }
    .isReply {
        visibility visible;
    }
    .moxie-shim {
        z-index 1 !important;
    }
}

.bot_bar_hide {
    transition-duration: .2s;
    transform: translateY(100%);

}

@keyframes enlargeSize {
    0% {
        transform: scale(0.75, 0.75);
    }
    100% {
        transform: scale(1.2, 1.2);
    }
}