#hodometer {
    padding: 0 15px;
    overflow: hidden;
    font-size: 16px;
    color: rgba(0,0,0,.8)
    padding-bottom: 16px;
    width: 100%;
    .title {
        padding: 20px 1em 8px;
        text-align: center;
        font-weight: 700;
        line-height: 21px;
        border-radius: 3px;
        background-origin: content-box;
        z-index: 2;
    }

    .allday {
        border: 1px solid #e6e8ea;
    }

    .day_item {
        display: flex;
        min-height: 3.5em;
        border-bottom: 1px solid #e6e8ea;

        .day_number {
            font-weight: 600;
            color: rgba(0,0,0,.8)
        }

        .detail_day {
            font-size: 12px;
            text-align: center;
            color: rgba(0,0,0,.4);
        }

        .left {
            padding: 10px 0 0;
            width: 21%;
            text-align: center;
            border-right: 1px solid #e6e8ea;
        }

        .right {
            padding: 10px;
            width: 79%;
            font-size: 14px;
            .line1 {
                color rgba(0, 0, 0, .8);
            }
        }

        .hotel_poi {
            color rgba(0, 0, 0, .6);
        }

        .hotel_info {
            display: flex;
            align-items: center;
            height: 1.5rem;

            div {
                margin-right: 0.2rem;
            }

            .sleep_icon {
                width: 16px;
                margin-right: 6px;
            }

            .hotel_name {
                color: #0CBF79;
                max-width: 55%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }

            .hotel_currency {
                color: #999;
            }

            .book_hotel {
                color: #fff;
                font-size: 0.8em;
                display: inline-block;
                vertical-align: -0.1em;
                width: 1.5em;
                line-height: 1.5em;
                text-align: center;
                border-radius: 2px;
                background: #ff7466;
            }

        }
    }
    .day_item:last-child {
        border-bottom: none;
    }
    .checkall {
        text-align: center;
        padding: 10px 0;
        z-index: 2;
        width: 100%;
        color: rgba(0,0,0,.4);
        img {
            width: 22px
        }
    }
    .loading {
        width 22px;
        margin: auto;
        display: block;
        animation: mymove 1.4s infinite linear;
    }

}
@keyframes mymove {
    0%   { transform: rotate(360deg); }
    100% { transform: rotate(0deg); }
}